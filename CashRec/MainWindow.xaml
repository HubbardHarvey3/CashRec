<Window x:Class="CashRec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashRec"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154*"/>
        </Grid.ColumnDefinitions>
        <TabControl>
            <TabItem x:Name="DonorListTab" Header="Donor List">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left" Margin="29,78,0,0" Text="Too Add a new Donor Fill out the below Form and hit Submit then Save" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Height="65" Width="230"/>
                    <TextBlock x:Name="DonorNumLabel" HorizontalAlignment="Left" Margin="27,136,0,0" Text="Donor #" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="54"/>
                    <TextBox x:Name="DonorNumInput" HorizontalAlignment="Left" Margin="27,162,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="54"/>
                    <TextBlock x:Name="DonorFirstName" HorizontalAlignment="Left" Margin="27,197,0,0" Text="First Name" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox x:Name="DonorFirstNameInput" HorizontalAlignment="Left" Margin="27,228,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="18"/>
                    <TextBox x:Name="DonorLastNameInput" HorizontalAlignment="Left" Margin="27,292,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="18"/>
                    <TextBlock x:Name="DonorLastName" HorizontalAlignment="Left" Margin="27,262,0,0" Text="Last Name" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Button Content="Submit" HorizontalAlignment="Left" Margin="27,344,0,0" VerticalAlignment="Top" Width="54" Click="SubmitDonor" />
                    <TextBox x:Name="DonorListDisplay" Margin="318,29,23,60" Text="" TextWrapping="Wrap" TextChanged="DonorListDisplay_TextChanged"/>
                    <TextBlock x:Name="DonorListOutput" HorizontalAlignment="Left" Margin="318,12,0,0" Text="Donor List" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Button x:Name="Displaybtn" Click="writeDlist" Content="Display Your Donor List" HorizontalAlignment="Left" Margin="27,29,0,0" VerticalAlignment="Top" Width="131" Height="33"/>


                </Grid>
            </TabItem>


        </TabControl>

    </Grid>
</Window>
